{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "rootDir": "./src",
    "moduleResolution": "nodenext",
    "isolatedModules": true, //Ensures each file can be transpiled independently
    "outDir": "./dist",
    "esModuleInterop": true, //connect ES modules and commonJS
    "forceConsistentCasingInFileNames": true,
    "strict": true, //checking typescript typing,    Enables all strict type checking options
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
